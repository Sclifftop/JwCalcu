.keys view:active {
    box-shadow: 0px 0px #6b54d3;
    top: 4px;
}

.keys view.eval:active {
    box-shadow: 0px 0px #717a33;
    top: 4px;
}

.top view.clear:active {
    top: 4px;
    box-shadow: 0px 0px #d3545d;
}

